<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.player_fragment">

    <ImageView
        android:id="@+id/fragment_player_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/fragment_player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_player_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/fragment_player_editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/fragment_player_img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:hint="Name"/>


</RelativeLayout>