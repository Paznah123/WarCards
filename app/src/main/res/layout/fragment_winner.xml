<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WinnerFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/winner_LBL_leftScore"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/winner_IMG_leftPlayer"
            android:layout_alignParentStart="true"
            android:paddingStart="100dp"
            android:textStyle="bold"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/winner_IMG_leftPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
        </ImageView>

        <ImageView
            android:id="@+id/winner_IMG_rightPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
        </ImageView>

        <TextView
            android:id="@+id/winner_LBL_rightScore"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/winner_IMG_rightPlayer"
            android:layout_alignParentEnd="true"
            android:paddingEnd="100dp"
            android:textStyle="bold"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/winner_LBL_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="90dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/winner_BTN_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="Restart"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>


</LinearLayout>
