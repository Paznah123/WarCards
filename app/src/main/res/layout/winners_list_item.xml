<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/winnerList_item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="1"/>

    <ImageView
        android:id="@+id/winnerList_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/winnerList_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Player Name"/>

    <TextView
        android:id="@+id/winnerList_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Player Score"/>

    <TextView
        android:id="@+id/winnerList_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Player Date"/>


</LinearLayout>